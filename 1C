// Класс для учета студентов
Класс УчетСтудентов
{
  // Переменные класса
  ПерсональныеДанныеСтудентов[] данныеСтудентов;
  УчетПосещаемости[] учетПосещаемости;
  УчетУспеваемости[] учетУспеваемости;
  
  // Методы класса
  // Добавление студента
  Процедура ДобавитьСтудента(ПерсональныеДанныеСтудентов студент)
  {
    данныеСтудентов.Добавить(студент);
    учетПосещаемости.Добавить(Новый УчетПосещаемости(студент));
    учетУспеваемости.Добавить(Новый УчетУспеваемости(студент));
  }
  
  // Удаление студента
  Процедура УдалитьСтудента(ПерсональныеДанныеСтудентов студент)
  {
    Для Каждого учет In учетПосещаемости Цикл
      Если учет.Студент = студент Тогда
        учетПосещаемости.Удалить(учет);
      КонецЕсли;
    КонецЦикла;
    
    Для Каждого учет In учетУспеваемости Цикл
      Если учет.Студент = студент Тогда
        учетУспеваемости.Удалить(учет);
      КонецЕсли;
    КонецЦикла;
    
    данныеСтудентов.Удалить(студент);
  }
}

// Класс для планирования учебного процесса
Класс ПланированиеУчебногоПроцесса
{
  // Переменные класса
  УчебныеПланы[] учебныеПланы;
  РасписаниеЗанятий[] расписаниеЗанятий;
  
  // Методы класса
  // Создание учебного плана
  Процедура СоздатьУчебныйПлан(УчебныеПланы учебныйПлан)
  {
    учебныеПланы.Добавить(учебныйПлан);
  }
  
  // Удаление учебного плана
  Процедура УдалитьУчебныйПлан(УчебныеПланы учебныйПлан)
  {
    учебныеПланы.Удалить(учебныйПлан);
  }
  
